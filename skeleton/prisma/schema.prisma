// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int           @id @default(autoincrement())
  email             String        @unique
  password          String
  avatar            String?
  experience_points Int
  bingo_board       Bingo_Board[]
}

model Bingo_Board {
  id              Int            @id @default(autoincrement())
  user            User           @relation(fields: [userId], references: [id])
  userId          Int
  squares         Int
  isCompleted     Boolean
  difficultyLevel Int
  bingo_square    Bingo_Square[]
}

model Bingo_Square {
  id           Int         @id
  bingoBoard   Bingo_Board @relation(fields: [bingoBoardId], references: [id])
  bingoBoardId Int
  position     Int         //position on the board. ranges from 1-24 account for free space
  exercise     Exercise    @relation(fields: [exerciseId], references: [id])
  exerciseId   Int
  isCompleted  Boolean
  inProgress   Boolean     //An exercise cannot be completed and in progress at the same time
}

model Exercise {
  id           Int            @id @default(autoincrement())
  category     String
  title        String
  description  String
  duration     Int
  bingo_square Bingo_Square[]
}
